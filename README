//Install mysql
sudo apt-get mysql-server
//Install mysqli
sudo apt install php-mysqli
//Install php
sudo apt-get install php
//Install apache web server
sudo apt-get install apache2
//Activate apache web server on localhost on folder
php -S localhost:8000
//Change password to the db
sudo myslq
ALTER USER 'root'@'localhost'
IDENTIFIED WITH mysql_native_password BY 'your_new_password';
//Enter the db as root
mysql -u root -p
//Also create the table specified in the registro.php file
*SQL queries

